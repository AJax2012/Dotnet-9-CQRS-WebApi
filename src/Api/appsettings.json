{
  "Serilog": {
    "Using":  [ 
      "Serilog.Exceptions",
      "Serilog.Formatting.Compact",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.OpenTelemetry",
      "Serilog.Sinks.Seq",
      "Serilog.Enrichers.ClientInfo"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": {
      "Console": {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      "File": {
        "Name": "File",
        "Args": {
          "path": "./logs/SourceName-.json",
          "rollingInterval": "Day",
          "formatter": {
            "type": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
          }
        }
      },
      "OpenTelemetry": {
        "Name": "OpenTelemetry"
      },
      "Seq": {
        "Name": "Seq",
        "Args": {
          "ServerUrl": "http://seq:5341"
        }
      }
    },
    "Enrich": [ 
      "FromLogContext",
      "WithExceptionDetails",
      "WithClientIp",
      "WithCorrelationId"
    ]
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [],
        "ValidIssuer": "****",
        "SigningKeys": [
          {
            "Id": "****",
            "Issuer": "****",
            "Value": "****",
            "Length": 32
          }
        ]
      }
    }
  },
  "ConnectionString": {
    "Default": "****"
  }
}
